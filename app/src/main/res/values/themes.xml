<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseholdAccountAndroidApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/yellow50</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow50</item>
        <item name="colorPrimaryVariant">@color/yellow100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="multistateswitch_MultiStateSwitch">
        <item name="multistateswitch_background_color">@color/black</item>
        <item name="multistateswitch_text_color">@color/white</item>
        <item name="multistateswitch_text_size">14sp</item>
        <item name="multistateswitch_selected_state_index">0</item>
        <item name="multistateswitch_selected_background_color">@color/yellow50</item>
        <item name="multistateswitch_selected_text_color">@color/purple_500</item>
        <item name="multistateswitch_selected_text_size">14sp</item>
        <item name="multistateswitch_disabled_state_enabled">false</item>
        <item name="multistateswitch_disabled_state_index">0</item>
        <item name="multistateswitch_disabled_background_color">@color/purple_200</item>
        <item name="multistateswitch_disabled_text_color">@color/yellow100</item>
        <item name="multistateswitch_disabled_text_size">14sp</item>
        <item name="multistateswitch_max_number_states">-1</item>
    </style>

</resources>